# Flow CRM Frontend Environment Configuration

# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=10000

# Authentication Configuration
VITE_TOKEN_STORAGE_KEY=flowcrm_token
VITE_REFRESH_TOKEN_STORAGE_KEY=flowcrm_refresh_token
VITE_TOKEN_REFRESH_THRESHOLD=300000

# Application Configuration
VITE_APP_NAME=Flow CRM
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Debug Configuration
VITE_DEBUG_API_CALLS=true
VITE_DEBUG_AUTH=true

# Feature Flags
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_OFFLINE_MODE=false

# Security Configuration
VITE_ENABLE_CSRF_PROTECTION=true
VITE_SECURE_COOKIES=false